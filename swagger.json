{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Library",
    "description": "Library NodeJS Application API",
    "license": "ISC"
  },
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Book",
      "description": "API from book in the system"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/book/create": {
      "post": {
        "tags": ["Book"],
        "description": "Create new book in system",
        "parameters": [
          {
            "name": "book",
            "in": "body",
            "required": true,
            "description": "Book that we want to create",
            "example": {
              "title": "Clien años de soledad",
              "pages": 402,
              "year": 1962,
              "isbn": "123-456-7890-A1",
              "author": "Gabriel García Márquez"
            },
            "scheme": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "New book is created",
            "example": {
              "application/json": {
                "status": true,
                "message": "Book created"
              }
            }
          }
        }
      }
    },
    "/book/list": {
      "get": {
        "tags": ["Book"],
        "responses": {
          "200": {
            "description": "All books are returned",
            "examples": {
              "application/json": {
                "status": true,
                "message": "array"
              }
            }
          }
        }
      }
    },
    "/book/{isbn}": {
      "parameters": [
        {
          "name": "isbn",
          "in": "path",
          "required": true,
          "description": "Book isbn find",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Book"],
        "responses": {
          "200": {
            "description": "A book returned",
            "examples": {
              "application/json": {
                "status": true,
                "bookByISBN": "object"
              }
            }
          }
        }
      }
    },
    "/book/delete/{isbn}": {
      "parameters": [
        {
          "name": "isbn",
          "in": "path",
          "required": true,
          "description": "Book isbn to delete",
          "type": "string"
        }
      ],
      "delete": {
        "tags": ["Book"],
        "responses": {
          "200": {
            "description": "A book deleted",
            "examples": {
              "application/json": {
                "status": true,
                "message": "Book deleted"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Book": {
      "required": ["title", "pages", "year", "isbn", "author"],
      "properties": {
        "title": {
          "type": "string",
          "uniqueItems": false,
          "example": "Cien años de soledad"
        },
        "pages": {
          "type": "integer",
          "example": 402
        },
        "year": {
          "type": "integer",
          "example": 1972
        },
        "isbn": {
          "type": "string",
          "uniqueItems": false,
          "example": "123-456-7890-A1"
        },
        "author": {
          "type": "string",
          "uniqueItems": false,
          "example": "Gabriel García Márquez"
        }
      }
    }
  }
}
